pipeline{
    agent any

    stages{
        stage("build"){
            steps{
                //here goes the scritp that actually execute some cooment on the jenkins server...for example:
                //sh 'np install' // if we are working with JavaScrpt application
                //sh 'np build'
                sh 'ifconfig'
            }
        }
        stage("test"){
            steps{
                // if we are doing test to our code
                echo 'testing application'
            }
        }
        stage("deploy"){
            steps{
                //deployment script will be here 
                echo 'deploying application'
            }
        }
    }
}

